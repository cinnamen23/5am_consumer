  </select>
  
  <update id="qupdate" parameterType="org.cg.domain.QuestionVO">
		UPDATE tbl_question SET title = '${title}', CONTENT='${content}',UPDATEDATE=sysdate WHERE qno ='${qno}'
	</update>
  
  
  
  
  
  
  <selectKey keyProperty="qno" resultType="int" order="AFTER">  
